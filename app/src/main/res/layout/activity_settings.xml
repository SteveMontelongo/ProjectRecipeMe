<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SettingsActivity"
    android:padding="8dp">

    <ImageButton
        android:id="@+id/btnCancelSettings"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/small_item_button_shape"
        android:text="Cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back" />
    <TextView
        android:id="@+id/settingsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/settings_page_label"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutThemesButtonSettings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/small_item_button_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsLabel"
        android:layout_marginTop="20dp"
        >

        <Button
            android:id="@+id/btnThemesSettings"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:gravity="center|center_vertical"
            android:maxLength="27"
            android:maxLines="1"
            android:layout_weight="9"
            android:text="@string/settings_themes"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:background="#00000000"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutLanguagesSettings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/small_item_button_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutThemesButtonSettings"
        android:layout_marginTop="20dp"
        >

        <Button
            android:id="@+id/btnLanguagesSettings"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:gravity="center|center_vertical"
            android:maxLength="27"
            android:maxLines="1"
            android:layout_weight="9"
            android:text="@string/settings_languages"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:background="#00000000"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutDeleteFridgeButtonSettings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/small_delete_button_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutLanguagesSettings"
        android:weightSum="10"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:id="@+id/ivFridgeSettings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_fridge_white" />
        <LinearLayout
            android:id="@+id/layoutDeleteFridgeButtonSettingsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/layoutDeleteFridgeButtonSettings"
            android:weightSum="10"
            android:orientation="vertical"
            android:layout_weight="9"
            >
            <TextView
                android:id="@+id/fridgeDeleteLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/settings_hold_label"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_weight="1"
        />
        <Button
            android:id="@+id/btnDeleteFridgeSettings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:textAlignment="center"
            android:maxLength="27"
            android:maxLines="1"
            android:layout_weight="9"
            android:text="@string/settings_fridge_delete"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="#00000000"
            />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutDeleteGroceryButtonSettings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/small_delete_button_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutDeleteFridgeButtonSettings"
        android:weightSum="10"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:id="@+id/ivGrocerySettings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_grocery_white" />
    <LinearLayout
        android:id="@+id/layoutDeleteGroceryButtonSettingsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layoutDeleteGroceryButtonSettings"
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_weight="9"
        >
        <TextView
            android:id="@+id/groceryDeleteLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/settings_hold_label"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/btnDeleteGrocerySettings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLength="27"
            android:maxLines="1"
            android:layout_weight="9"
            android:text="@string/settings_grocery_delete"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="#00000000"
            />
    </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>