<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".activities.GroceryListContentActivity">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/rvGroceryListContentItems"
        app:layout_constraintTop_toBottomOf="@+id/tvGroceryListContentName"
        tools:layout_editor_absoluteX="-26dp"
        android:orientation="horizontal">

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGroceryListContentItems"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintBottom_toTopOf="@+id/btnCancelGroceryListContent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGroceryListContentName">


    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/tvGroceryListContentName"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:text="GROCERY"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCancelGroceryListContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:backgroundTint="@color/dark_red"

        android:text="Cancel"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnUpdateGroceryListContent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnUpdateGroceryListContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="4dp"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="@+id/btnCancelGroceryListContent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnCancelGroceryListContent"
        app:layout_constraintTop_toTopOf="@+id/btnCancelGroceryListContent" />



</androidx.constraintlayout.widget.ConstraintLayout>