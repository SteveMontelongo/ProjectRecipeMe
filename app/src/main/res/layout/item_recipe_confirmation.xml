<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/layoutHorizontalRecipeConfirmation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="10">
    <TextView
        android:id="@+id/tvItemRecipeConfirmation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="40dp"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:maxLength="27"
        android:maxLines="1"
        android:text="Name"
        android:textSize="20sp"
        android:layout_weight="9.5" />


    <ImageButton
        android:id="@+id/ibItemRecipeConfirmationStatus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/checkout_item_shape"
        android:layout_gravity="center"
        android:layout_weight=".5"
        app:srcCompat="@drawable/roundstyle"
        />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>