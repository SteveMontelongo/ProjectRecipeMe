<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvItemRecipeConfirmation"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="40dp"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:maxLength="27"
        android:maxLines="1"
        android:text="Name"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/ibItemRecipeConfirmationStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/ibItemRecipeConfirmationStatus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/checkout_item_shape"
        app:layout_constraintBottom_toBottomOf="@+id/tvItemRecipeConfirmation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvItemRecipeConfirmation"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/roundstyle"
        />


</androidx.constraintlayout.widget.ConstraintLayout>